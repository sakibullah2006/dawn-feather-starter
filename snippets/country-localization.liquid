{%- liquid
  assign show_filter = localization.available_countries.size | times: 1.0 | times: 0 | plus: 0
  if localization.available_countries.size > 9
    assign show_filter = true
  else
    assign show_filter = false
  endif
  assign popular = localization.available_countries | where: 'popular?' | sort: 'name'
  assign show_popular = false
  if localization.available_countries.size > 9 and popular.size > 1
    assign show_popular = true
  endif
  assign currencies = localization.available_countries | map: 'currency' | map: 'iso_code' | uniq
  if currencies.size > 1
    assign show_currency = true
  else
    assign show_currency = false
  endif
-%}

<div class="relative" x-data="{ open: false, search: '' }" @click.away="open = false">
  <button
    type="button"
    @click="open = !open"
    class="flex items-center gap-1.5 text-xs font-medium opacity-75 hover:opacity-100 transition-opacity px-2 py-1"
    :aria-expanded="open"
  >
    <span>
      {{- localization.country.name }} | {{ localization.country.currency.iso_code }}
      {{ localization.country.currency.symbol -}}
    </span>
    <svg class="w-3 h-3 transition-transform" :class="open && 'rotate-180'" fill="currentColor" viewBox="0 0 20 20">
      <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"/>
    </svg>
  </button>

  <div
    x-show="open"
    x-transition
    class="absolute right-0 mt-2 w-64 rounded shadow-lg bg-[rgb(var(--color-background))] border border-current/10 z-50"
    style="display: none;"
  >
    {%- if show_filter -%}
      <div class="p-2 border-b border-current/10">
        <input
          x-model="search"
          @input="Array.from($refs.list.querySelectorAll('[data-name]')).forEach(el => el.style.display = el.dataset.name.toLowerCase().includes(search.toLowerCase()) ? '' : 'none')"
          type="search"
          placeholder="Search"
          class="w-full px-3 py-1.5 text-xs border border-current/20 rounded bg-transparent"
          autocomplete="off"
        >
      </div>
    {%- endif -%}

    <div class="max-h-64 overflow-y-auto py-1" x-ref="list">
      {%- if show_popular -%}
        <div class="px-3 py-1.5 text-xs font-semibold opacity-60">Popular</div>
        <ul class="pb-2 mb-2 border-b border-current/10">
          {%- for country in popular -%}
            <li data-name="{{ country.name }}">
              <a
                href="#"
                data-value="{{ country.iso_code }}"
                class="flex items-center gap-2 px-4 py-2 text-sm hover:bg-current/5"
                @click.prevent="$el.closest('form').querySelector('input[name=country_code]').value = '{{ country.iso_code }}'; $el.closest('form').submit();"
              >
                <span class="w-4">
                  {%- if country.iso_code == localization.country.iso_code -%}
                    <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                    </svg>
                  {%- endif -%}
                </span>
                <span class="flex-1">{{ country.name }}</span>
                {%- if show_currency -%}
                  <span class="text-xs opacity-60">
                    {{- country.currency.iso_code }}
                    {{ country.currency.symbol -}}
                  </span>
                {%- endif -%}
              </a>
            </li>
          {%- endfor -%}
        </ul>
      {%- endif -%}

      <ul>
        {%- for country in localization.available_countries -%}
          <li data-name="{{ country.name }}">
            <a
              href="#"
              data-value="{{ country.iso_code }}"
              class="flex items-center gap-2 px-4 py-2 text-sm hover:bg-current/5"
              @click.prevent="$el.closest('form').querySelector('input[name=country_code]').value = '{{ country.iso_code }}'; $el.closest('form').submit();"
            >
              <span class="w-4">
                {%- if country.iso_code == localization.country.iso_code -%}
                  <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                {%- endif -%}
              </span>
              <span class="flex-1">{{ country.name }}</span>
              {%- if show_currency -%}
                <span class="text-xs opacity-60">
                  {{- country.currency.iso_code }}
                  {{ country.currency.symbol -}}
                </span>
              {%- endif -%}
            </a>
          </li>
        {%- endfor -%}
      </ul>
    </div>
  </div>
</div>
<input type="hidden" name="country_code" value="{{ localization.country.iso_code }}">
